@model IEnumerable<Monografico.Models.Inventarios>

@{
    ViewData["Title"] = "Inventario";
}

@section link {
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-3">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" onclick="abrirModalAgregar()">
                    Agregar Inventario
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="inventario-datatable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Precio)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EsContabilizable)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaEntrada)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Minimo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Unidad)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Crear-->
<div class="modal fade" id="crearModal" tabindex="-1" role="dialog" aria-labelledby="CrearModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Fornulario de @ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("~/Views/Admin/PartialViews/Inventario/_FormularioInventario.cshtml", new Monografico.Models.Inventarios())
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar-->
<div class="modal fade" id="editarModal" tabindex="-1" role="dialog" aria-labelledby="EditarModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="EditarModalLabel">Editar @ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="editarModal-body" class="modal-body">
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmacion de eliminacion-->
<div class="modal fade" id="borrarModal" tabindex="-1" role="dialog" aria-labelledby="EliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div id="editarModal-body" class="modal-body">
                <h4>Seguro que desea borrar el elemento</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button id="botonEliminar" type="button" class="btn btn-danger" onclick="eliminar()">Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section script {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
        
    <script>
        //Carga la tabla cuando el documento html esta cargado
        $(document).ready(() => {         
            $('#inventario-datatable').DataTable({
                ajax: {
                    url: "@Url.Action("List","Inventario")",
                    dataSrc: ''
                },
                columnDefs: [
                    {
                        targets: 0,
                        visible: false
                    }
                ],
                columns: [
                    { data: 'id' },
                    { data: 'descripcion' },
                    { data: 'cantidad' },
                    { data: 'precio' },
                    { data: 'esContabilizable' },
                    { data: 'fechaEntrada' },
                    { data: 'minimo' },
                    { data: 'unidad' },
                    {
                        data: 'id',
                        render: function (data, type, row, meta) {
                            return '<input onclick="abrirModalEditar(' + data + ')" class="btn btn-primary" type="button" value="Edit" /> ' +
                            '<input onclick="abrirModalBorrar(' + data + ')" class="btn btn-danger" type="button" value="Borrar" />';
                        }
                    }
                ]
            });
        });

        //Abre el modal formulario para agregar un nuevo inventario
        function abrirModalAgregar() {
            $('#crearModal').modal({
                keyboard: false,
                backdrop: 'static'
            });
        }

        //Abre modal con los campos del inventario a editar
        function abrirModalEditar(id) {
            //Recive el partial view atravez de ajax y lo inserta dentro del elemento #editarModal-body
            $('#editarModal-body').load("@Url.Action("Edit","Inventario")" + "/" + id, () => {
                $('#editarModal').modal({
                    keyboard: false,
                    backdrop: 'static'
                });
            });
        }

        //Abre el modal de mensaje de confirmacion para eliminar un inventario
        var temp;
        function abrirModalBorrar(id) {
            temp = id;
            $('#borrarModal').modal({
                keyboard: false,
                backdrop: 'static'
            });
        }

        //Elimina un inventario
        function eliminar() {
            var url = "@Url.Action("Delete","Inventario")";
            $.ajax({
                url: url,
                data: { id: temp },
                error: function (response) { alert(response); },
                success: function () {
                    $('#inventario-datatable').DataTable().ajax.reload();
                    $('#borrarModal').modal('hide');
                    toastr.success("Eliminado");
                }
            });
        }
    </script>
}