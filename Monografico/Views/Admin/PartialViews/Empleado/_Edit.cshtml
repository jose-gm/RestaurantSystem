@model Monografico.ViewModels.UsuarioViewModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery xsrf

@{
    var modalTitle = "Editar";
}

@functions {
    public string GetAntiXsrfRequestToken()
    {
        return xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<div class="row">
    <div class="col-md-12">
        <form id="form-editar" enctype="multipart/form-data" method="post" asp-antiforgery="false" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="IdUsuario" class="form-control" />
            </div>
            <div class="form-group">
                <input hidden asp-for="ImagenEncoded" class="form-control" />
            </div>
            <div class="form-group">
                <input hidden asp-for="UsuarioActual" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-check-inline">
                    <input asp-for="Sexo" class="form-check-input" type="radio" value="false">
                    <label asp-for="Sexo" class="form-check-label">Hombre</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Sexo" class="form-check-input" type="radio" value="true">
                    <label asp-for="Sexo" class="form-check-label">Mujer</label>
                </div>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" data-mask="000-000-0000" required />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Imagen</label>
                <div class="custom-file">
                    <input asp-for="Imagen" class="custom-file-input">
                    <label class="custom-file-label">Seleccionar imagen</label>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" name="isEdicion" value="true" />
                <input type="hidden" name="nombreUsuarioActual" value="@Model.NombreUsuario" />
                <label asp-for="NombreUsuario" class="control-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <select asp-for="Rol" class="custom-select" asp-items="@ViewBag.Roles"></select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <input type="hidden" id="RequestVerificationToken"
                   name="RequestVerificationToken" value="@GetAntiXsrfRequestToken()">
        </form>
    </div>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(() => {
        $('.custom-file-input').on("change", function() {
            var nombreAchivo = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(nombreAchivo);
        });

        $('#myModalLabel').html("@modalTitle");
    });

    var formulario = document.getElementById("form-editar");
    formulario.addEventListener('submit', (e) => {
        e.preventDefault();

        if (formulario.checkValidity()) {
            var archivos = document.getElementById("Imagen").files;
            var formData = new FormData();
            for (var i = 0; i != archivos.length; i++) {
                formData.append("Imagen",archivos[i]);
            }
            formData.append("IdUsuario",document.getElementById("IdUsuario").value);
            formData.append("ImagenEncoded",document.getElementById("ImagenEncoded").value);
            formData.append("Nombre",document.getElementById("Nombre").value);
            formData.append("Apellido",document.getElementById("Apellido").value);
            formData.append("Sexo",document.getElementById("Sexo").value);
            formData.append("Cedula",document.getElementById("Cedula").value);
            formData.append("Direccion",document.getElementById("Direccion").value);
            formData.append("Telefono",document.getElementById("Telefono").value);
            formData.append("Rol",document.getElementById("Rol").value);
            formData.append("NombreUsuario",document.getElementById("NombreUsuario").value);
            formData.append("UsuarioActual",document.getElementById("UsuarioActual").value);
            formData.append("Clave",document.getElementById("Clave").value);

            $.ajax({
                method: "POST",
                url: "@Url.Action("Edit","Usuario")",
                headers: {
                    "RequestVerificationToken": document.getElementById("RequestVerificationToken").value,
                },
                data: formData,
                contentType: false,
                processData: false,
                error: function (response) {
                    if (response.responseJSON === false) {
                    }
                    else {
                        $('#myModal').modal('hide');
                        toastr.error("Error al editar el empleado");
                    }                 
                },
                success: function (data) {
                    $('#empleado-datatable').DataTable().ajax.reload();
                    $('#myModal').modal('hide');
                    toastr.success("Se a editado con exito");
                }
            });
        }
    });
</script>

