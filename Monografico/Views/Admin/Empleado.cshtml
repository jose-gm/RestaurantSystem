@model IEnumerable<Monografico.ViewModels.UsuarioViewModel>

@{
    ViewData["Title"] = "Empleado";
    ViewData["Controller"] = "Empleado";
}

@section link {

}

<div class="card">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-3">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" onclick="abrirModalCrear();">
                    Agregar Empleado
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="empleado-datatable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Apellido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<partial name="~/Views/Admin/PartialViews/_Modal.cshtml" />

<!-- Modal de confirmacion de eliminacion-->
<partial name="~/Views/Admin/PartialViews/_ModalDelete.cshtml" />

@section script {
    <script src="~/js/site.js"></script>

    <script>
        //Carga la tabla cuando el documento html esta cargado
        $(document).ready(() => {
            $('#empleado-datatable').DataTable({
                responsive: false,
                ajax: {
                    url: "@Url.Action("List", "Usuario")",
                    dataSrc: ''
                },
                columnDefs: [
                    {
                        targets: 0,
                        visible: false
                    }
                ],
                columns: [
                    { data: 'idUsuario' },
                    { data: 'nombre' },
                    { data: 'apellido' },
                    { data: 'rol' },
                    { data: 'nombreUsuario' },
                    { data: 'email' },
                    {
                        data: 'idUsuario',
                        render: function (data, type, row, meta) {
                            return '<input onclick="abrirModalEditar(' + data + ')" class="btn btn-primary" type="button" value="Edit" /> ' +
                            '<input onclick="abrirModalBorrar(' + data + ')" class="btn btn-danger" type="button" value="Borrar" />';
                        }
                    }
                ]
            });
        });

        function abrirModalCrear() {
            agregarCrear("@Url.Action("Create","Usuario")");               
        }

        function abrirModalEditar(id) {
            agregarEditar(id, "@Url.Action("Edit","Usuario")");
        }

        document.getElementById("botonEliminar").addEventListener('click', () => {
            eliminar("@Url.Action("Delete","Usuario")", "empleado-datatable");
        });
    </script>
}

