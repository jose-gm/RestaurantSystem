@model IEnumerable<Monografico.ViewModels.MesaViewModel>

@{
    ViewData["Title"] = "Mesas";
}

@section link {

}

<div class="card">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-12">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-md-6">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" onclick="abrirModalCrear();">
                    Agregar Mesa
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="mesa-datatable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdMesa)
                                </th>
                                <th>
                                    Zona
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Numero)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Asientos)
                                </th>

                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<partial name="~/Views/Admin/PartialViews/_Modal.cshtml" />

<!-- Modal de confirmacion de eliminacion-->
<partial name="~/Views/Admin/PartialViews/_ModalDelete.cshtml" />

@section script {
    <script src="~/js/site.js"></script>

    <script>
        //Carga la tabla cuando el documento html esta cargado
        $(document).ready(() => {
            $('#mesa-datatable').DataTable({
                responsive: false,
                ajax: {
                    url: "@Url.Action("List","Mesa")",
                    dataSrc: ''
                },
                columnDefs: [
                    {
                        targets: [0],
                        visible: false
                    }
                ],
                columns: [
                    { data: 'idMesa' },
                    { data: 'zona.descripcion' },
                    { data: 'numero' },
                    { data: 'asientos' },

                    {
                        data: 'idMesa',
                        width: '20%',
                        render: function (data, type, row, meta) {
                            
                            return '<div class="btn-group">' +
                                        '<button onclick="abrirModalEditar(' + data + ')" class="action-btn btn btn-secondary"><i class="fas fa-edit"></i></button>' +
                                        '<button onclick="abrirModalBorrar(' + data + ')" class="action-btn btn btn-secondary"><i class="fas fa-times"></i></button>' +
                                    '</div>';
                        }
                    }
                ]
            });
        });

        function abrirModalCrear() {
            agregarCrear("@Url.Action("Create","Mesa")");               
        }

        function abrirModalEditar(id) {
            agregarEditar(id, "@Url.Action("Edit","Mesa")");
        }

        document.getElementById("botonEliminar").addEventListener('click', () => {
            eliminar("@Url.Action("Delete","Mesa")", "mesa-datatable");
        });
    </script>
}